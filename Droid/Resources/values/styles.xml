<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="SplashTheme">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:background">@drawable/splashscreenbg</item>
	</style>
	<style name="AppThemeNoTitle" parent="AppTheme">
		<item name="android:windowNoTitle">true</item>
	</style>
	<style name="AppTheme" parent="AppTheme.Base" />
	<style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
		<!-- colorPrimary is used for the default action bar background -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
		<item name="colorAccent">@color/colorAccent</item>
		<!-- Used to for the title of the Toolbar -->
		<item name="android:textColorPrimary">@color/white</item>
		<!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
		<item name="android:textColorPrimaryInverse">@color/white</item>
		<!-- Used to color the text of the action menu icons -->
		<item name="android:textColorSecondary">@color/textColorPrimary</item>
		<!-- Used to color the overflow menu icon -->
		<item name="actionMenuTextColor">@color/white</item>
		<!-- text color for subtitle and more options (3 dot) button. -->
		<item name="android:textColor">@color/textColorPrimary</item>

        <!--<item name="android:textColor">#5C5C63</item>-->
		<!-- used for verticle Scrollbar drawable -->
		<!--<item name="android:scrollbarThumbVertical">@drawable/verticle_scrollbar_drawable</item>
		<item name="actionBarItemBackground">@drawable/action_bar_selector</item>
		for native ActionBar 
		<item name="android:actionBarItemBackground">@drawable/action_bar_selector</item>-->

		<item name="android:windowBackground">@color/app_background</item>
        <item name="android:colorBackground">@color/app_background</item>

        <item name="android:textAllCaps">false</item>
	</style>
	<!-- Popup Menu Background Color styles -->
	<style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:colorBackground">@color/colorAccent</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
	 </style>

	
 <style
        name="CustomTabLayout"
        parent="Widget.Design.TabLayout">
        <item
            name="tabIndicatorColor">@color/custom_segment_selected</item>
        <item
            name="tabBackground">@color/tab_background_color</item>
        <item
            name="tabIndicatorHeight">3dp</item>
		<item
            name="tabTextAppearance">@style/CustomTabTextAppearance</item>
     <item
            name="tabSelectedTextColor">@color/white</item>
    </style>

	<style
        name="CustomTabTextAppearance"
        parent="TextAppearance.Design.Tab">
        <item
            name="android:textSize">16sp</item>
        <item
            name="android:textColor">@color/white</item>
        <item
            name="textAllCaps">false</item>
    </style>

	<style name="ColorSwitchStyle">
	<item name="colorControlActivated">@color/green</item>
	<item name="colorSwitchThumbNormal">@color/grey</item>
	<item name="android:colorForeground">@color/grey</item>
   </style>

   <style name="EditModeEditTextTheme">
    <!-- Used for the bottom line when not selected / focused -->
    <item name="colorControlNormal">@color/colorPrimary</item>
    <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
</style>
	
</resources>